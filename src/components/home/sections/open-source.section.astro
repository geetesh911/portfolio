---
import { ShowMore } from '@/components/ui/show-more';
import { OpenSourceCards } from '../../contributions/ui/open-source-cards';
import contributions from '@/data/contributions.json';

const limit = 6;
---

<section id="projects">
    <h1 class="text-2xl md:text-3xl text-white font-bold max-w-5xl mx-auto px-8 mt-20 md:mt-40">
        Latest contributions to open source
    </h1>
    <OpenSourceCards limit={limit} client:load />
    {contributions.length > limit && <ShowMore link="/contributions" />}
</section>
