---
import { ShowMore } from '@/components/ui/show-more';
import { ProjectCards } from '../../projects/ui/project-cards';
import projects from '@/data/projects.json';

const limit = 6;
---

<section id="projects">
    <h1 class="text-2xl md:text-3xl text-white font-bold max-w-5xl mx-auto px-8 mt-20 md:mt-40">
        I've been building a lot of things
    </h1>
    <ProjectCards limit={limit} client:load />
    {projects.length > limit && <ShowMore link="/projects" />}
</section>
