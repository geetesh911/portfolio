---
import { Image } from 'astro:assets';
import AvatarImage from '@/assets/avatar.webp';
import { NavbarLinks } from './ui/navbar-links';
import { MobileMenu } from './ui/mobile-menu';

const links = [
    {
        name: 'About',
        url: '/about',
    },
    {
        name: 'Projects',
        url: '/projects',
    },
    {
        name: 'Contributions',
        url: '/contributions',
    },
    {
        name: 'Blogs',
        url: '/blogs',
    },
];
---

<div
    class="flex flex-row items-center justify-between sm:justify-between py-8 max-w-5xl mx-auto relative z-[100] px-8"
>
    <div class="hidden lg:flex w-full justify-between">
        <div
            class="flex flex-row space-x-8 items-center antialiased border px-4 py-2 rounded-2xl border-zinc-700/60 bg-zinc-800"
        >
            <a
                class="font-bold text-sm flex items-center justify-center text-white space-x-2"
                href="/"
            >
                <Image
                    class={'transition duration-500 blur-0 scale-100 rounded-full'}
                    src={AvatarImage}
                    alt="Avatar"
                    loading={'eager'}
                    width={30}
                    height={30}
                />
                <span class="font-inter font-bold">Geetesh Laddha</span>
            </a>

            <NavbarLinks links={links} client:load />
        </div>
        <a
            href="/Geetesh_Resume_Senior_Engineer.pdf"
            target="__blank"
            class="font-medium text-white inline-flex items-center justify-center rounded-[10px] bg-gradient-to-b from-[#464d55] to-[#25292e] text-sm px-4 py-2 transition duration-150 shadow-[0_10px_20px_rgba(0,_0,_0,_.1),0_3px_6px_rgba(0,_0,_0,_.05)] hover:shadow-[rgba(0,_1,_0,_.2)_0_2px_8px] active:outline-none hover:opacity-80"
        >
            Download CV
        </a>
    </div>
    <div class="flex lg:hidden w-full">
        <div class="flex flex-row justify-between items-center w-full">
            <a
                class="font-bold text-sm flex items-center justify-center text-white space-x-2"
                href="/"
            >
                <Image
                    class={'transition duration-500 blur-0 scale-100 rounded-full'}
                    src={AvatarImage}
                    alt="Avatar"
                    loading={'lazy'}
                    width={30}
                    height={30}
                />
                <span class="font-inter font-bold text-zinc-100">Geetesh Laddha</span>
            </a>
            <MobileMenu links={links} client:load />
        </div>
    </div>
</div>
