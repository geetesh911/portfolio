---
import type { CollectionEntry } from 'astro:content';

interface Props {
    blog: CollectionEntry<'blog'>;
}

const {
    data: { title, description, date },
    id,
} = Astro.props.blog;
---

<a class="relative md:p-8 hover:bg-zinc-700/40 rounded-3xl transition-all" href={`/blogs/${id}`}>
    <div class="relative z-50">
        <small class="md:border-l md:border-zinc-500 md:pl-4 text-zinc-400 block">
            {
                date.toLocaleDateString('en-US', {
                    year: 'numeric',
                    month: 'long',
                    day: 'numeric',
                })
            }
        </small>
        <h2 class="text-zinc-200 font-bold text-xl mt-4">{title}</h2>
        <p class="text-zinc-400 font-normal text-sm mt-4 leading-loose max-w-4xl">
            {description}
        </p>
        <p class="text-cyan-500 text-sm mt-6 block">Read More</p>
    </div>
</a>
